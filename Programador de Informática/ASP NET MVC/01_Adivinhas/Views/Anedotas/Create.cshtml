@model _01_Adivinhas.Models.Anedotas

@{
    ViewData["Title"] = "Adicionar adivinha";
}

<h2>Adicone aqui uma nova piada</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="anedota" class="control-label"></label>
                <input asp-for="anedota" class="form-control" />
                <span asp-validation-for="anedota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
